  <Mobile
    vid_src="/werk/tess/vid-teddy-mobile.mp4"
    vid_title="ipad screencapture website teddy"
    img1_src="/werk/tess/teddy-mobile-2.webp"
    img1_alt=""
    img2_src="/werk/tess/teddy-mobile-3.webp"
    img2_alt=""
  />
  <Img img_src="/werk/tess/teddy-section-img-bg.webp" img_alt="#" />
  <Desktop vid_src="/werk/tess/vid-teddy-desktop.mp4" vid_title="#" />
