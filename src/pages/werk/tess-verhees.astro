<Standard
  title="Studio Moondust Werk"
  h1="Tess Verhees Portfolio"
  description="#"
  keywords="#"
  og_img_url="/werk/tess/teddy-hero-og.webp"
  og_img_alt="#"
  og_site_name="Studio Moondust"
>
  <Hero
    heading="Een nieuw portfolio en webshop in één"
    client="Tess Verhees"
    services="branding, website"
    year="2022"
    project_url="www.tessverhees.nl"
  />
