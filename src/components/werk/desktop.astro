---
const { vid_src, vid_title } = Astro.props;
---

<section class="img-divider mx-auto max-w-screen-2xl px-4 py-16 md:px-8 lg:pb-32">
  <video
    class="mx-auto w-full max-w-6xl overflow-hidden rounded-xl shadow-lg md:rounded-3xl"
    muted
    autoplay
    playsinline
    loop
  >
    <source class="min-h-full min-w-full object-cover" src={vid_src} type="video/mp4" />
  </video>
</section>
